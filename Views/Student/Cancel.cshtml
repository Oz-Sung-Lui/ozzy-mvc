@model IEnumerable<ozzy_mvc.Controllers.EquipmentInventory>

@{
    ViewData["Title"] = "Cancel";
}

<head>
    <meta http-equiv="content-type" content="text/html" charset="utf-8" />
    <link rel="styleSheet" href="~/css/equipment.css" />
    <link rel="styleSheet" href="~/css/equipment/cancel.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<h1>Cancel Booking</h1>

<table>
    <thead>
        <tr>
            <th class="EquipmentName">
                @Html.DisplayNameFor(model => model.EquipmentName)
            </th>
            @* <th>
                @Html.DisplayNameFor(model => model.EquipmentType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th> *@
            <th class ="LabName">
                @Html.DisplayNameFor(model => model.LabName)
            </th>
            <th class ="Date">
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th class="TimeSlot">
                @Html.DisplayNameFor(model => model.TimeSlot)
            </th>
            <th class='Morning'>
                Morn
            </th>
            <th class='Afternoon'>
                Noon
            </th>
            <th class='Evening'>
                Night
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.EquipmentName)
                </td>
                @* <td>
                    @Html.DisplayFor(modelItem => item.EquipmentType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td> *@
                <td>
                    @Html.DisplayFor(modelItem => item.LabName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TimeSlot)
                </td>
                @* <td>
                    <a asp-controller="Booking" asp-action="ListByEquipmentID" asp-route-id="@item.EquipmentID">View Booking</a> 
                </td> *@
                <td>
                    <div class="tableGridBox">
                    <input type="checkbox"> 
                    <i class="fa fa-trash-o"></i>
                </div>
                </td>
                <td>
                    <div class="tableGridBox">
                    <input type="checkbox"> 
                    <i class="fa fa-trash-o"></i>
                </div>
                </td>
                <td>
                    <div class="tableGridBox">
                    <input type="checkbox">
                    <i class="fa fa-trash-o"></i>
                </div>
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td></td>
            <td>
                <a asp-area="" asp-controller="Equipment" asp-action="Inventory" asp-route-id=@Context.Request.Cookies["CurrentID"]>
                    <button class="light">Back</button>
                </a>
            </td>
            <td>
                <a asp-area="" asp-controller="Student" asp-action="Cancel" asp-route-id=@Context.Request.Cookies["CurrentID"]>
                    <button class="light">Cancel Book</button>
                </a>
            </td>
        </tr>
    </tfoot>
</table>
