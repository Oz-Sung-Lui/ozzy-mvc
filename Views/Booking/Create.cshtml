@model ozzy_mvc.Models.Booking

@{
    ViewData["Title"] = "Create";
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Register</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/booking-create.css" />
</head>
<body>
<div class="create-cointainer">
<h1>Booking</h1>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="StudentID" class="control-label"></label>
                <select asp-for="StudentID" class ="form-control" asp-items="ViewBag.StudentID"></select>
            </div>
            <div class="form-group">
                <label asp-for="EquipmentID" class="control-label"></label>
                <select asp-for="EquipmentID" class ="form-control" asp-items="ViewBag.EquipmentID"></select>
            </div>
            <div class="form-group">
                <label asp-for="TimeSlot" class="control-label"></label>
                <select asp-for="TimeSlot" class ="form-control" asp-items="ViewBag.TimeSlot"></select>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input type="date" dateformat="d M y" asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
<div>
    <a asp-action="Index">Back to List</a>
</div>
</div>
</body>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
