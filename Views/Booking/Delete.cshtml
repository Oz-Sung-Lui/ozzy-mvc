@model ozzy_mvc.Models.Booking

@{
    ViewData["Title"] = "Delete";
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Register</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/booking-element.css" />
</head>

<body>
    <div class="container">
        <div class="element-booking-container">
            <h1>Delete Booking</h1>
            <h3>Are you sure you want to delete this?</h3>
            <hr>
            <div style="text-align: left;">
                <div>
                    <label>
                        @Html.DisplayNameFor(model => model.StudentID)
                    </label>
                    @Html.DisplayFor(model => model.StudentID)
                </div>
                <div>
                    <label>
                        @Html.DisplayNameFor(model => model.Equipment)
                    </label>
                    @Html.DisplayFor(model => model.Equipment.EquipmentID)
                </div>
                <div>
                    <label>
                        @Html.DisplayNameFor(model => model.TimeSlot)
                    </label>
                    @Html.DisplayFor(model => model.TimeSlot)
                </div>
                <div>
                    <label>
                        @Html.DisplayNameFor(model => model.Date)
                    </label>
                    @Html.DisplayFor(model => model.Date)
                </div>
            </div>
            <form asp-action="Delete">
                <input type="hidden" asp-for="BookingID" />
                <input type="submit" value="Delete" />
                <a asp-action="Index">Back to List</a>
            </form>
        </div>
    </div>

</body>