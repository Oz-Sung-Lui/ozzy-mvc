@model ozzy_mvc.Models.Booking

@{
    ViewData["Title"] = "Details";
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Register</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/booking-element.css" />
</head>

<body>

    <div class="container">
        <div class="element-booking-container">
            <h1>Booking Details</h1>
            <br>
            <div style="text-align: left;">
                <div>
                    <label>@Html.DisplayNameFor(model => model.StudentID)</label>
                    @Html.DisplayFor(model => model.StudentID)
                </div>
                <div>
                    <label>@Html.DisplayNameFor(model => model.Equipment)</label>
                    @Html.DisplayFor(model => model.Equipment.EquipmentID)
                </div>
                <div>
                    <label>@Html.DisplayNameFor(model => model.TimeSlot)</label>
                    @Html.DisplayFor(model => model.TimeSlot)
                </div>
                <div>
                    <label>@Html.DisplayNameFor(model => model.Date)</label>
                    @Html.DisplayFor(model => model.Date)
                </div>
            </div>
            <br>
            <div>
                <a asp-action="Edit" asp-route-id="@Model.BookingID">Edit</a> |
                <a asp-action="Index">Back to List</a>
            </div>
        </div>
    </div>

</body>