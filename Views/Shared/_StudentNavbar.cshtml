<nav>
    <ul>
        <li>
            <a asp-area="" asp-controller="Home" asp-action="Index">Home</a>
        </li>
        <li class="dropdown" id="dropdown" general="">
            <button class="dropbtn">LAB</button>
            <div class="dropdown-content">
                <a asp-area="" asp-controller="Lab" asp-action="Hardware">Hardware</a>
                <a asp-area="" asp-controller="Lab" asp-action="HCRL">HCRL</a>
                <a asp-area="" asp-controller="Lab" asp-action="Robot">Robot & IoT</a>
                <a asp-area="" asp-controller="Lab" asp-action="ESL">ESL</a>
                <a asp-area="" asp-controller="Lab" asp-action="Network">Network</a>
            </div>
        </li>
        <li>
            <a asp-area="" asp-controller="Lab" asp-action="Network">Network</a>
        </li>
        <li class="dropdown" style="float: right;">
            <button class="user-button" onclick="myFunction()">
                <div class="profile-picture">
                    @Context.Request.Cookies["CurrentUsername"].Substring(0,1)
                </div>
                &emsp;@Context.Request.Cookies["CurrentUsername"] &emsp;
            </button>
            <div class="dropdown-content" id="myDropdown" notgeneral="">
                <a asp-area="" asp-controller="Booking" asp-action="ListByEquipmentID">My Profile</a>
                <a asp-area="" asp-controller="Auth" asp-action="Logout">Logout</a>
            </div>         
        </li>    
    </ul>
</nav>

<script>
// When the user clicks on the button, toggle between hiding and showing the dropdown content
function myFunction() { 
    document.getElementById("myDropdown").classList.toggle("dropdown-content-user-button");
    document.querySelector('nav').style.setProperty('--enable', 'black');   //CHANGE COLOR TO BLACK WHEN ACTIVE
}

    // Close the dropdown if the user clicks outside of it
window.onclick = function(e) {
    if (!e.target.matches('.user-button')) {
    var myDropdown = document.getElementById("myDropdown");
        if (myDropdown.classList.contains('dropdown-content-user-button')) {
            myDropdown.classList.remove('dropdown-content-user-button');
            document.querySelector('nav').style.setProperty('--enable', 'rgb(126, 126, 126)');   //CHANGE COLOR BACK WHEN NOT ACTIVE
        }
    }
}
</script>

