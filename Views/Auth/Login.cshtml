@model ozzy_mvc.Models.Student

@{
    ViewData["Title"] = "Login";
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Login</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/signin-signup.css" />
</head>

<body>
    <div class="signin-signup-cointainer">

        <h1>Login</h1>

        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>  @* WTF THIS LINE*@

                <input asp-for="Username" class="inputField" placeholder="Username" />
                <span asp-validation-for="Username" class="error"></span>

                <input type="password" asp-for="Password" class="inputField" placeholder="Password" />
                <span asp-validation-for="Password" class="error"></span>

                <input type="submit" value="Login" id="btnSigninSignup"/>
                <p>
                    Don't have an account?
                    <a asp-area="" asp-controller="Student" asp-action="Create">Register</a>
                </p>
        </form>

    </div>
</body>

</html>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
