@model ozzy_mvc.Models.Equipment

@{
    ViewData["Title"] = "Create";
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Register</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/equipment-create.css" />
</head>


<body>
<div class="create-cointainer">

<h1>Equipment</h1>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="EquipmentName" class="control-label">EquipmentID</label>
                <input asp-for="EquipmentName" class="form-control" />
                <span asp-validation-for="EquipmentName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EquipmentType" class="control-label"></label>
                <select asp-for="EquipmentType" class ="form-control" asp-items="ViewBag.EquipmentType"></select>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LabName" class="control-label"></label>
                <select asp-for="LabName" class ="form-control" asp-items="ViewBag.LabName"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" id="btncreate" />
            </div>
        </form>
<div>
    <a asp-action="Index">Back to List</a>
</div>
</div>
</body>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
