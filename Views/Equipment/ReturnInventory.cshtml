@model IEnumerable<ozzy_mvc.Controllers.EquipmentInventory>

@{
    ViewData["Title"] = "Inventory";
}
<head>
    <meta http-equiv="content-type" content="text/html" charset="utf-8" />
    <link rel="StyleSheet" href="~/css/equipment/inventory.css" />
</head>


<table class="table">
    <thead>
        <tr>
            <th class='EquipmentName'>
                @Html.DisplayNameFor(model => model.EquipmentName)
            </th>
            <th class='EquipmentType'>
                @Html.DisplayNameFor(model => model.EquipmentType)
            </th>
            <th class='Description'>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th class='LabName'>
                @Html.DisplayNameFor(model => model.LabName)
            </th>
            <th class='TimeSlot'>
                @Html.DisplayNameFor(model => model.TimeSlot)
            </th>
            <th class='Date'>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th class='blank'>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EquipmentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EquipmentType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LabName)
            </td>
            <th>
                @Html.DisplayFor(modelItem => item.TimeSlot)
            </th>
            <th>
                @Html.DisplayFor(modelItem => item.Date)
            </th>
            <td>
                <a asp-controller="Booking" asp-action="ListByEquipmentID" asp-route-id="@item.EquipmentID">View Booking</a> 
            </td>
        </tr>
}
    </tbody>
</table>
