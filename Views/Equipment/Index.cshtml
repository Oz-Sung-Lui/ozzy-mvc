@model IEnumerable<ozzy_mvc.Models.Equipment>

@{
    ViewData["Title"] = "Index";
}

<!--
                
-->
<head>
    <meta http-equiv="content-type" content="text/html" charset="utf-8" />
    <link rel="StyleSheet" href="~/css/admin-equipment.css" />
</head>

<div class="banner">
    Equipment Management
</div>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="contain-std-table">
<table class="std-table">
    <thead class = "std-thead">
        <tr>
            <th style="width: 12vw;">
                @Html.DisplayNameFor(model => model.EquipmentName)
            </th>
            <th style="width: 15vw;">
                @Html.DisplayNameFor(model => model.EquipmentType)
            </th>
            <th style="width: 15vw;">
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th style="width: 12vw;">
                @Html.DisplayNameFor(model => model.LabName)
            </th>
            <th style="width: 12vw;"></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EquipmentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EquipmentType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LabName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.EquipmentID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.EquipmentID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.EquipmentID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>
