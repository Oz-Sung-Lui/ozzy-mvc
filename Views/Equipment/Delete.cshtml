@model ozzy_mvc.Models.Equipment

@{
    ViewData["Title"] = "Delete";
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Register</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/booking-element.css" />
</head>

<body>
    <div class="container">
        <div class="element-booking-container">
            <h1>Delete Equipment</h1>
            <h3>Are you sure you want to delete this?</h3>
            <hr>
            <div style="text-align: left;">
                <div>
                    <label>
                        @Html.DisplayNameFor(model => model.EquipmentName)
                    </label>
                    @Html.DisplayFor(model => model.EquipmentName)
                </div>
                <div>
                    <label>
                        @Html.DisplayNameFor(model => model.LabName)
                    </label>
                    @Html.DisplayFor(model => model.LabName)
                </div>
            </div>
                <form asp-action="Delete">
                    <input type="hidden" asp-for="EquipmentID" />
                    <input type="submit" value="Delete" class="btn btn-danger" />
                    <a asp-action="Index">Back to List</a>
                </form>

        </div>
    </div>

</body>